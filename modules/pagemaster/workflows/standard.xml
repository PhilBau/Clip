<?xml version="1.0" encoding="ISO-8859-1"?>

<workflow>

  <title>Standard</title>
  <description>This is a two staged workflow with stages for untrusted submissions and finally approved publications.
               It does not allow untrusted corrections to published pages.</description>


  <states>

    <state id="waiting">
      <title>Waiting</title>
      <description>Content has been submitted and is waiting for acceptance</description>
    </state>

    <state id="approved">
      <title>Approved</title>
      <description>Content has been approved is available online</description>
    </state>

  </states>


  <actions>

      <!-- From initial state -->

    <action id="approve">
      <title>Submit+Approve</title>
      <description>Submit new content and approve immediately</description>
      <permission>moderator</permission>
      <nextState>approved</nextState>
      <operation online="1">createPub</operation>
    </action>

    <action id="submit">
      <title>Submit</title>
      <description>Submit new content for acceptance by the local moderator</description>
      <permission>author</permission>
      <nextState>waiting</nextState>
      <operation>createPub</operation>
    </action>

      <!-- State: waiting -->

    <action id="approve">
      <title>Approve</title>
      <description>Approve publication for immediate publishing</description>
      <permission>moderator</permission>
      <state>waiting</state>
      <nextState>approved</nextState>
      <operation newrevision="0" online="1">updatePub</operation><!-- only update online state -->      
    </action>

    <action id="delete">
      <title>Delete</title>
      <description>Delete publication</description>
      <permission>moderator</permission>
      <state>waiting</state>
      <operation>deletePub</operation>
    </action>

    <action id="update">
      <title>Update</title>
      <description>Save content with no WS change</description>
      <permission>moderator</permission>
      <state>waiting</state>
      <operation newrevision="0">updatePub</operation>
    </action>

      <!-- State: approved -->

    <action id="updateApprove">
      <title>Update and Approve</title>
      <description>Update content and approve for immediate publishing</description>
      <permission>moderator</permission>
      <state>approved</state>
      <operation online="1" nextstate="approved">updatePub</operation>
    </action>

    <action id="update">
      <title>Update</title>
      <description>Update content for later publishing</description>
      <permission>moderator</permission>
      <state>approved</state>
      <operation online="0" nextstate="waiting">updatePub</operation>
    </action>

    <action id="delete">
      <title>Delete</title>
      <description>Delete publication</description>
      <permission>moderator</permission>
      <state>approved</state>
      <operation>deletePub</operation>
    </action>
    <action id="MoveToDepot">
      <title>Move to Depot</title>
      <description>Move to depot</description>
      <permission>moderator</permission>
      <state>approved</state>
      <operation>moveToDepot</operation>
    </action>

    <action id="online">
      <title>Go online</title>
      <description>Set publication online</description>
      <permission>moderator</permission>
      <state>approved</state>
      <operation online="1">updateOnlineState</operation>
    </action>

    <action id="offline">
      <title>Take offline</title>
      <description>Set publication offline</description>
      <permission>moderator</permission>
      <state>approved</state>
      <operation online="0">updateOnlineState</operation>
    </action>

  </actions>


</workflow>
